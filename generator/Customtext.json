            "field": "color",
            "label": "Font Color",
            "type": "colorfield",
            "json-expose": true,
            "json-property": "color"
          },        {
            "field": "fontWeight",
            "label": "Font Weight",
            "type": "numberfield",
            "json-expose": true,
            "json-property": "weight"
          },        {
            "field": "margin",
            "label": "Margin of Text Component",
            "type": "numberfield",
            "json-expose": true,
            "json-property": "margin"
          },        {
            "field": "fontFamily",
            "label": "Font Family",
