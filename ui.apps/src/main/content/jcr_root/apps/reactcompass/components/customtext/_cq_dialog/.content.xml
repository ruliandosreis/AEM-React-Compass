<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="CustomText"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <layout jcr:primaryType="nt:unstructured"
              margin="{Boolean}false"
              sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
      <items jcr:primaryType="nt:unstructured">
         <column jcr:primaryType="nt:unstructured"
                 sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
               <text cq-msm-lockable="./text"
                     fieldLabel="Text"
                     jcr:primaryType="nt:unstructured"
                     name="./text"
                     sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
               <fontSize cq-msm-lockable="./fontSize"
                         fieldLabel="Font Size"
                         jcr:primaryType="nt:unstructured"
                         name="./fontSize"
                         sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"/>
               <color cq-msm-lockable="./color"
                      fieldLabel="Font Color"
                      jcr:primaryType="nt:unstructured"
                      name="./color"
                      sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"/>
               <fontWeight cq-msm-lockable="./fontWeight"
                           fieldLabel="Font Weight"
                           jcr:primaryType="nt:unstructured"
                           name="./fontWeight"
                           sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"/>
               <margin cq-msm-lockable="./margin"
                       fieldLabel="Margin of Text Component"
                       jcr:primaryType="nt:unstructured"
                       name="./margin"
                       sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"/>
               <fontFamily cq-msm-lockable="./fontFamily"
                           fieldLabel="Font Family"
                           jcr:primaryType="nt:unstructured"
                           name="./fontFamily"
                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
               <textAlign cq-msm-lockable="./textAlign"
                           fieldLabel="Text Align"
                           jcr:primaryType="nt:unstructured"
                           name="./textAlign"
                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
            </items>
         </column>
      </items>
   </content>
</jcr:root>
